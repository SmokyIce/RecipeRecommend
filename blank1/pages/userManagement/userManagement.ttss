/* 基本容器样式 */  
.container {  
  padding: 16px;  
}  

/* 每个菜谱项的样式 */  
.recipe-item {  
  margin-bottom: 20px;  
  border-bottom: 1px solid #ddd;  
  padding-bottom: 10px;  
}  

/* 图片样式 */  
.recipe-image {  
  width: 100%;  
  height: 120px;  
  margin-bottom: 10px;  
}  

/* 文本样式 */  
.recipe-name {  
  font-size: 18px;  
  font-weight: bold;  
  margin-bottom: 5px;  
}  

.recipe-method,  
.recipe-rating,  
.recipe-comment {  
  font-size: 14px;  
  margin-bottom: 3px;  
}  