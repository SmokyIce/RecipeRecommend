<view class="container">  
  <form class="form">
      <text class="title">注册</text>  
      <input class="input" placeholder="请输入手机号" bindinput="onPhoneInput" />  
      <input class="input" placeholder="请输入昵称" bindinput="onNicknameInput" />  
      <input class="input" placeholder="请输入密码，8-16位数字、字母" password="true" bindinput="onPasswordInput" />  
      <input class="input" placeholder="请确认密码" password="true" bindinput="onConfirmPasswordInput" />  
      <button class="register-button" bindtap="onRegister" form-type="submit" type='primary'>注册</button>  
  </form>  
</view>  